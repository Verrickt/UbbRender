<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="UBBDrawer.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:lab="using:CommunityToolkit.WinUI.Controls"
    xmlns:local="using:UBBDrawer">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <Color x:Key="CustomBackgroundColor">#FBFBFB</Color>
                    <Color x:Key="borderlinecolor">#E5E5E5</Color>
                    <Color x:Key="DividerColor">#CACACA</Color>
                    <Color x:Key="MarkdownBackgroudColor">#FFE8F4F9</Color>
                    <Color x:Key="QuoteBorderColor">#ffc4ae</Color>
                    <Color x:Key="pink-green" >#60d2b3ae</Color>
                    <Color x:Key="trans-plain">#00000000</Color>
                    <Color x:Key="sky-blue">#d4eefd</Color>
                    <Color x:Key="yel-low">#fdffce</Color>
                    <Color x:Key="PlayControl">#FFFFFF</Color>
                    <Color x:Key="Contrast">#000000</Color>
                    <Color x:Key="Standard">#FFFFFF</Color>
                    <Color x:Key="AcrylicTintColor">#66ccff</Color>
                    <Color x:Key="PortaitBackgroundColor">#62b3ae</Color>

                </ResourceDictionary>
                <ResourceDictionary x:Key="Dark">
                    <Color x:Key="CustomBackgroundColor">#2f2f2f</Color>
                    <Color x:Key="borderlinecolor">#202020</Color>
                    <Color x:Key="DividerColor">#525252</Color>
                    <Color x:Key="MarkdownBackgroudColor">#ff404040</Color>
                    <Color x:Key="QuoteBorderColor">#ffc4ae</Color>
                    <Color x:Key="pink-green">#aaADD8E6</Color>
                    <Color x:Key="trans-plain">#002b2b2b</Color>
                    <Color x:Key="sky-blue">#202020</Color>
                    <Color x:Key="yel-low">#2b2b2b</Color>
                    <Color x:Key="PlayControl">#545354</Color>
                    <Color x:Key="Contrast">#FFFFFF</Color>
                    <Color x:Key="Standard">#000000</Color>
                    <Color x:Key="AcrylicTintColor">#000000</Color>
                    <Color x:Key="PortaitBackgroundColor">#004d9891</Color>

                </ResourceDictionary>
                <ResourceDictionary x:Key="Tint"></ResourceDictionary>

            </ResourceDictionary.ThemeDictionaries>
            <!-- Other app resources here -->
            <lab:MarkdownThemes x:Key="StandardRenderTheme" BorderBrush="Blue" ></lab:MarkdownThemes>
            <SolidColorBrush x:Key="MarkdownBackgroudBrush" Color="{ThemeResource MarkdownBackgroudColor}"></SolidColorBrush>
            <local:AdvancedImageProvider x:Key="ImageProvider"></local:AdvancedImageProvider>
            
            <lab:MarkdownConfig  x:Key="StandardRenderConfig" Themes="{StaticResource StandardRenderTheme}"  ImageProvider="{StaticResource ImageProvider}"></lab:MarkdownConfig>
            <FontFamily x:Key="HMSC">/Assets/Fonts/HarmonyOS_Sans_SC_Regular.ttf#hm sans</FontFamily>
            <Style TargetType="TextBlock">
                <Setter Property="FontFamily" Value="/Assets/Fonts/HarmonyOS_Sans_SC_Regular.ttf#HarmonyOS Sans SC"></Setter>
            </Style>
            <Style TargetType="RichTextBlock">
                <Setter Property="FontFamily" Value="/Assets/Fonts/HarmonyOS_Sans_SC_Regular.ttf#HarmonyOS Sans SC"></Setter>
            </Style>
        </ResourceDictionary>
        
    </Application.Resources>
</Application>
